@model ResourceManageGroup.Models.Employee
@{
    ViewData["Title"] = "Assign Training - Project";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Resource Manage Group</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/sample.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tt.css" type="text/css" />
    <style>
        form {
            margin: auto;
            width: 70%;
            text-align: center;
        }
        label {
            display: inline-block;
            width: 120px;
            text-align: left;
        }
        select {
            display: inline-block;
            width: 200px;
            margin-bottom: 10px;
        }

        .submit {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                     <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Recruiter" asp-action="EmployeeListR">Employee List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Recruiter" asp-action="VacationReqListR">Vacation Request</a>
                        </li>
                    </ul>
                </div>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <div class="title">Assign Training</div>
        <form method="post" asp-action="AssignTrainingR" asp-area="Recruiter">
            <input type="hidden" asp-for="employeeId">
            <div class="mb-1 row">
                <label asp-for="employeeTrainerName" class="col-sm-2 col-form-label">Choose Trainer:</label>
                <div class="form-group">
                        <select asp-for="employeeTrainerName" type="text" class="form-control" id="Trainer_name"  required>
                            <option value="" disabled selected>Assign Trainer</option>
                            @foreach (var item in ViewBag.list)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                </div>
            </div>
            <div class="mb-1 row">
            <label asp-for="employeeTrainingStartTime" class="col-sm-2 col-form-label">Training Start Date:</label>
            <div class="form-group">
                <input asp-for="employeeTrainingStartTime" type="date" id="startDateTime" class="form-control" required>
                <span asp-validation-for="employeeTrainingStartTime" class="text-danger"></span>
            </div>
            </div>
            <div class="mb-1 row">
            <label asp-for="employeeTrainingEndTime" class="col-sm-2 col-form-label">Training End Date:</label>
            <div class="form-group">
                <input asp-for="employeeTrainingEndTime" type="date" id="endDateTime" class="form-control"  required>
                <span asp-validation-for="employeeTrainingEndTime" class="text-danger"></span>
            </div>
            </div>
            <button align="center" type="submit" class="btn btn-primary rounded submit p-2 px-3" id="submitbutton" value="Save">Submit</button>
        </form>
    </div>
    <footer>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <p align="center">Â© Copyrights 2023 Resource Manage Group</p>
            </div>
        </nav>
    </footer>
</body>
</html>