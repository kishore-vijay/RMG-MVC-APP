@model List<ResourceManageGroup.Models.Employee>
@{
    ViewData["Title"] = "Vacation Requested List";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Resource Manage Group</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/sample.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tt.css" type="text/css" />
    <style>
        .table tbody td {
        padding: 8px;
        text-align: center;
        background-color:  rgb(238, 192, 238);
        color: #000000;
        border: 1px solid #000000; 
        }

        img {
        width: 80px;
        height: 80px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                     <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Recruiter" asp-action="EmployeeListR">Employee List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Recruiter" asp-action="VacationReqListR">Vacation Request</a>
                        </li>
                    </ul>
                </div>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        
        <div class="title">Vacation People List</div>
        <br>
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Image</td>
                    <td>Name</td>
                    <td>Email</td>
                    <td>Details</td>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.employeeId</td>
                            <td>@if(employee.employeeImage != null)
                            {
                                <img src="@Url.Action("GetImage", "Recruiter", new { id = @employee.employeeId })" alt="img">
                            }
                            else
                            {
                                <img src="~/images/image.jpg" alt="default-img">
                            }</td>
                            <td>@employee.employeeName</td>
                            <td>@employee.employeeEmail</td>
                            <td><a class="nav-link text-dark" asp-route-id="@employee.employeeId" asp-controller="Recruiter" asp-action="ManageRequestR">View</a></td>
                        </tr>
                    }
                }
                
            </tbody>
        </table>

    </div>
    <footer>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <p align="center">Â© Copyrights 2023 Resource Manage Group</p>
            </div>
        </nav>
    </footer>
</body>
</html>