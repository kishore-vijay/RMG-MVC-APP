@model ResourceManageGroup.Models.Employee
@{
    ViewData["Title"] = "Assign Training - Project";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Resource Manage Group</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/sample.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tt.css" type="text/css" />
    <style>
        form {
            margin: auto;
            width: 70%;
            text-align: center;
        }
        label {
            display: inline-block;
            width: 120px;
            text-align: left;
        }
        select {
            display: inline-block;
            width: 200px;
            margin-bottom: 10px;
        }

        .submit {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                     <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        
                    </ul>
                </div>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                    @if(@Model.employeeImage != null)
                    {
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img src="@Url.Action("GetImage", "Recruiter", new { id = @Model.employeeId })" alt="navimg" onclick="showDropdown()">
                        </a>
                    }
                    else{
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img src="~/images/image.jpg" alt="default-img" onclick="showDropdown()">
                        </a>
                    }
                    <div class="dropdown-menu" id="dropdownMenu" aria-labelledby="navbarDropdown">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                    </div>
                    </li>
                </ul>
                </div>
                <style>
                nav img {
                width: 35px;
                height: 30px;
                }
                </style>
                <script>
                function showDropdown() {
                    document.getElementById("dropdownMenu").classList.toggle("show");
                }
                </script>
            </div>
        </nav>
    </header>
    <div>
        <div class="title">Vacation Request</div>
        <form method="post" asp-action="VacationRequestE" asp-area="Employee" enctype="multipart/form-data">
            <input type="hidden" asp-for="employeeId">
            <div class="mb-1 row">
            <label asp-for="employeeVacationReason" class="col-sm-2 col-form-label">Reason</label>
            <div class="form-group">
                <input asp-for="employeeVacationReason" type="text" class="form-control" id="Name"  required>
            </div>
            </div>
            <div class="mb-1 row">
            <label asp-for="employeeVacationStartTime" class="col-sm-2 col-form-label">Start Date:</label>
            <div class="form-group">
                <input asp-for="employeeVacationStartTime" type="date" id="startDateTime" class="form-control"  required>
                <span asp-validation-for="employeeVacationStartTime" class="text-danger"></span>
            </div>
            </div>
            <div class="mb-1 row">
            <label asp-for="employeeVacationEndTime" class="col-sm-2 col-form-label">End Date:</label>
            <div class="form-group">
                <input asp-for="employeeVacationEndTime" type="date" id="endDateTime" class="form-control"  required>
                <span asp-validation-for="employeeVacationEndTime" class="text-danger"></span>
            </div>
            </div>
            


            <button align="center" type="submit" class="btn btn-primary rounded submit p-2 px-3" id="submitbutton" value="Save">Submit</button>
        </form>
    </div>
    <footer>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <p align="center">Â© Copyrights 2023 Resource Manage Group</p>
            </div>
        </nav>
    </footer>
</body>
</html>